\end_inset
</cell>
<cell alignment="center" valignment="top" topline="true" leftline="true" usebox="none">
\begin_inset Text

\begin_layout Plain Layout

\shape italic
\begin_inset Formula $\frac{1}{K}$
\end_inset


\begin_inset Formula $\frac{\tau}{t_{0}}$
\end_inset


\begin_inset Formula $\left[1+\frac{t_{0}}{\tau}\right]$
\end_inset


